{
  "family": "multi-agent-system",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "${ecs_task_execution_role_arn}",
  "taskRoleArn": "${ecs_task_role_arn}",
  "containerDefinitions": [
    {
      "name": "multi-agent-orchestrator",
      "image": "${account_id}.dkr.ecr.${region}.amazonaws.com/multi-agent-system:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/multi-agent-system",
          "awslogs-region": "${region}",
          "awslogs-stream-prefix": "orchestrator"
        }
      },
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "${region}"
        },
        {
          "name": "ENVIRONMENT",
          "value": "${environment}"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:${database_password}@${database_endpoint}:5432/multiagent"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://${redis_endpoint}:${redis_port}"
        },
        {
          "name": "S3_BUCKET_NAME",
          "value": "${s3_bucket_name}"
        }
      ],
      "secrets": [
        {
          "name": "ANTHROPIC_API_KEY",
          "valueFrom": "${secrets_manager_arn}:anthropic_api_key::"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}